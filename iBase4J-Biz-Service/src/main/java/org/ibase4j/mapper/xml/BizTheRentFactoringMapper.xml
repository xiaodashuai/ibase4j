<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ibase4j.mapper.BizTheRentFactoringMapper">
  <select id="selectIdPage" resultType="java.lang.Long">
		select id_ from BIZ_RENTAL_FACTORING_KEY
		<where>
			<if test="cm.debtCode != null and cm.debtCode != ''">
				and DEBT_CODE = #{cm.debtCode}
			</if>
			<if test="cm.keyword != null and cm.keyword != ''">
				and (SENDER_ like '%'||#{cm.keyword}||'%')
			</if>
		</where>
	</select>

    <select id="queryByDebtCode" resultMap="BizTheRentFactoringMap">
		select
			DEBT_CODE,
			BUSINESS_TYPES,
			CUST_NO,
			TOLERANCE_PERIOD,
			FINANCE_PLATFORM,
			CUST_NAME,
			CUST_TATING
		from
			BIZ_RENTAL_FACTORING_KEY
		WHERE
			DEBT_CODE = #{debtCode , jdbcType=VARCHAR}
	</select>

    <resultMap id="BizTheRentFactoringMap" type="org.ibase4j.model.BizTheRentFactoring" >
        <result column="DEBT_CODE" property="debtCode" jdbcType="VARCHAR" />
        <result column="BUSINESS_TYPES" property="businessTypes" jdbcType="VARCHAR" />
        <result column="CUST_NO" property="custNo" jdbcType="VARCHAR" />
        <result column="TOLERANCE_PERIOD" property="tolerancePertod" jdbcType="INTEGER" />
        <result column="FINANCE_PLATFORM" property="financePlatform" jdbcType="VARCHAR" />
        <result column="CUST_NAME" property="custName" jdbcType="VARCHAR" />
        <result column="CUST_TATING" property="custTating" jdbcType="VARCHAR" />
    </resultMap>
		
</mapper>